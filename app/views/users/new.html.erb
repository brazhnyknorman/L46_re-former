<%= form_with model: @user do |form| %>
  <div>
    <%= form.label "Username: " %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email, value: "@gmail.com" %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "Please don't do 1234" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %><br>

