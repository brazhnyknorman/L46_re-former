<h1>Signup</h1>

<form action="/users" method="post" accept-charset="UTF-8" data-turbo="false">
  <div>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  </div>

  <div>
    <label for="username_input">Username: </label>
    <input type="text" id="username_input" name="user[username]"><br>
  </div>
  <div>
    <label for="email_input">Email: </label>
    <input type="text" id="email_input" name="user[email]" ><br>
  </div>
  <div>
    <label for="password_input">Password: </label>
    <input type="password" name="user[password]" id="password_input">
  </div>

  <div>
    <input type="submit" value="Submit">
  </div>
</form>
